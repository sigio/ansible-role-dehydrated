CHALLENGETYPE="{{dehydrated_challengetype}}"
BASEDIR="{{dehydrated_basedir}}"
CONFIG_D="{{dehydrated_configdir}}"
DOMAINS_TXT="{{dehydrated_domainstxt}}"
